---
// Write <head> tag settings for each locale

import { type Lang } from "@/i18n";
const locale = Astro.currentLocale as Lang;
---

{
  locale === "en" || locale === "es" ? (
    <style>body{ font-family: "Noto Sans", sans-serif; }</style>
  )

  : locale === "ja" ? (
    <link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;800&display=swap"
    />
    <style>body{ font-family: "Noto Sans JP", sans-serif; }</style>
  )

  : locale === "zh-cn" ? (
    <link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@400;800&display=swap"
    />
    <style>body{ font-family: "Noto Sans SC", sans-serif; }</style>
  )

  : locale === "ko" ? (
    <link rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;800&display=swap"
    />
    <style>body{ font-family: "Noto Sans KR", sans-serif; }</style>
  )

  : null
}
